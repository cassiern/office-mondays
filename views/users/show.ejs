Username: <%=user.username%><br>

	<img src="<%=user.profileImg%>"><br>
	About Me: <%=user.aboutMe%>

	<div>
	   	<%posts.forEach(function(posts){%>
    		<a href="/posts/<%=posts._id%>"> <%=posts.title %> </a>
		<%})%>
	</div>
	
<% if(currentUser == user._id){ %>

<form action="/users/<%=user._id%>/edit?_method=Put">
